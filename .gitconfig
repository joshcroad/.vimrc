[user]
	name = Joshua Croad
	email = joshcroad@gmail.com
[core]
	excludesfile = /Users/joshcroad/.gitexcludes
	pager = cat
	editor = /usr/bin/vim
[push]
	default = simple

[pull]
  rebase = false
[init]
	defaultBranch = main
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = blue
	local = yellow
	remote = red
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = blue
[tag]
  sort = version:refname
[credential]
	helper = osxkeychain
